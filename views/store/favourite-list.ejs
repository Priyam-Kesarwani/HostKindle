<%- include('../partials/head') %>
</head>
<body class="text-white bg-[#1A1A2E] min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-10 max-w-6xl">
    <h2 class="text-3xl md:text-4xl lg:text-5xl text-center mt-1 mb-8 tracking-wide font-bold text-white">
      Here are your Favourites</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% favouriteHomes.forEach(home => { %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl hover:-translate-y-2 transition-all duration-300 cursor-pointer max-w-sm">

          <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-40 object-cover">

          <div class="p-3 space-y-2">
            <h3 class="text-lg font-bold text-white">
              <%= home.houseName %>
            </h3>

            <div class="flex items-center text-gray-300">
              <i class="fas fa-map-marker-alt mr-2 text-xs"></i>
              <span class="text-xs"><%= home.location %></span>
            </div>

            <div class="flex items-center text-gray-300">
              <i class="fas fa-<%= home.furnished ? 'check-circle' : 'times-circle' %> mr-2 text-xs <%= home.furnished ? 'text-green-400' : 'text-gray-500' %>"></i>
              <span class="text-xs"><%= home.furnished ? 'Furnished' : 'Not Furnished' %></span>
            </div>

            <p class="text-gray-400 text-xs line-clamp-2"><%= home.description %></p>

            <div class="flex justify-between items-center">
              <span class="text-base font-bold text-violet-400">Rs <%= home.price %> / month</span>

              <div class="flex items-center text-yellow-500">
                <i class="fas fa-star mr-1 text-xs"></i>
                <span class="text-xs font-medium"><%= home.rating %></span>
              </div>
            </div>

            <form action="/favourites/delete/<%= home._id %>" method="POST">
              <button type="submit" class="w-full mt-3 bg-red-500 hover:bg-red-600 text-white py-2 rounded-md font-semibold transition-all duration-300 text-sm">
                Remove from Favourite
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
