<%- include('../partials/head') %>
  </head>
  <body class="text-white bg-[#1A1A2E] min-h-screen">
      <%- include('../partials/nav') %>
      <main class="container mx-auto px-4 py-10 max-w-6xl">
          <h2 class="text-3xl md:text-4xl lg:text-5xl text-center mt-1 mb-8 tracking-wide font-bold text-white">
              Details of <%= home.houseName %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 bg-gray-800 rounded-lg shadow-lg p-6">
              <div class="rounded-lg overflow-hidden">
                  <img src="<%= home.photo %>" alt="<%= home.name %>" class="w-full h-96 object-cover rounded-lg">
              </div>
              
              <div class="space-y-6">
                  <div class="border-b border-gray-600 pb-4">
                      <h3 class="text-2xl font-semibold text-white mb-2">Description</h3>
                      <p class="text-gray-300"><%= home.description %></p>
                  </div>

                  <div class="border-b border-gray-600 pb-4">
                      <h3 class="text-2xl font-semibold text-white mb-2">Location</h3>
                      <p class="text-gray-300"><%= home.location %></p>
                  </div>
                  
                  <div class="border-b border-gray-600 pb-4">
                      <h3 class="text-2xl font-semibold text-white mb-2">Price</h3>
                      <p class="text-violet-400 text-xl font-bold">Rs <%= home.price %> / night</p>
                  </div>
                  
                  <div class="border-b border-gray-600 pb-4">
                      <h3 class="text-2xl font-semibold text-white mb-2">Rating</h3>
                      <div class="flex items-center">
                          <span class="text-yellow-400 text-xl">â˜…</span>
                          <span class="ml-2 text-lg text-gray-300"><%= home.rating %> / 5</span>
                      </div>
                  </div>
                  
                  <div class="flex gap-4">
                    <div class="flex-1">
                      <%- include('../partials/favourite') %>
                    </div>
                    <div class="flex-1">
                      <% if (isLoggedIn) { %>
                        <button class="w-full bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white py-3 rounded-md font-semibold transition-all duration-300 hover:shadow-lg shadow-violet-500/25">
                          Book Now
                        </button>
                      <% } else { %>
                        <a href="/login" class="w-full bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white py-3 rounded-md font-semibold transition-all duration-300 hover:shadow-lg shadow-violet-500/25 block text-center">
                          Book Now
                        </a>
                      <% } %>
                    </div>
                  </div>
              </div>
          </div>
      </main>
  </body>
</html>