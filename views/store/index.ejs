<%- include('../partials/head') %>
  <!-- Latest Font Awesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  </head>

  <body class="text-white bg-[#1A1A2E] min-h-screen">
    <%- include('../partials/nav') %>

      <!-- Hero Section -->
        <section class="text-center py-16 px-4">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
            Handpicked Stays Unforgettable Moments
          </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Discover and book unique homes and experiences across the globe.
        </p>
        
        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto">
          <form action="/search" method="POST" class="flex bg-gray-800 rounded-lg p-2 shadow-lg">
            <div class="flex items-center px-4">
              <i class="fas fa-search text-gray-400"></i>
            </div>
            <input 
              type="text" 
              name="search"
              placeholder="Search for cities, properties..." 
              class="flex-1 bg-transparent text-white placeholder-gray-400 outline-none py-2"
              value="<%= searchQuery ? searchQuery : '' %>"
            >
            <button type="submit" class="bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white px-6 py-2 rounded-md font-semibold transition-all duration-300 hover:shadow-lg shadow-violet-500/25">
              Search
            </button>
          </form>
        </div>
      </section>

      <main class="container mx-auto px-4 pb-16 max-w-6xl">
        <% if (isSearchResults) { %>
          <div class="text-center mb-8">
            <h3 class="text-2xl font-semibold text-white mb-2">
              Search Results for "<span class="text-violet-400"><%= searchQuery %></span>"
            </h3>
            <p class="text-gray-300">
              Found <%= registeredHomes.length %> <%= registeredHomes.length === 1 ? 'result' : 'results' %>
            </p>
          </div>
        <% } %>
        
        <% if (registeredHomes.length === 0 && isSearchResults) { %>
          <div class="text-center py-16">
            <div class="text-6xl text-gray-500 mb-4">
              <i class="fas fa-search"></i>
            </div>
            <h3 class="text-2xl font-semibold text-white mb-2">No Results Found</h3>
            <p class="text-gray-300 mb-6">Try searching with different keywords or browse all properties.</p>
            <a href="/" class="bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white px-6 py-3 rounded-md font-semibold transition-all duration-300 hover:shadow-lg shadow-violet-500/25">
              Browse All Properties
            </a>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <% registeredHomes.forEach(home=> { %>
            <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl hover:-translate-y-2 transition-all duration-300 cursor-pointer max-w-sm">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-40 object-cover">

              <div class="p-3 space-y-2">
                <h3 class="text-lg font-bold text-white">
                  <%= home.houseName %>
                </h3>

                <div class="flex items-center text-gray-300">
                  <i class="fas fa-map-marker-alt mr-2 text-xs"></i>
                  <span class="text-xs"><%= home.location %></span>
                </div>

                <div class="flex items-center text-gray-300">
                  <i class="fas fa-<%= home.furnished ? 'check-circle' : 'times-circle' %> mr-2 text-xs <%= home.furnished ? 'text-green-400' : 'text-gray-500' %>"></i>
                  <span class="text-xs"><%= home.furnished ? 'Furnished' : 'Not Furnished' %></span>
                </div>

                <p class="text-gray-400 text-xs line-clamp-2"><%= home.description %></p>

                <div class="flex justify-between items-center">
                  <span class="text-base font-bold text-violet-400">Rs <%= home.price %> / month</span>

                  <div class="flex items-center text-yellow-500">
                    <i class="fas fa-star mr-1 text-xs"></i>
                    <span class="text-xs font-medium"><%= home.rating %></span>
                  </div>
                </div>

                <% if (isLoggedIn) { %>
                  <button class="w-full bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white py-2 rounded-md font-semibold transition-all duration-300 hover:shadow-lg shadow-violet-500/25 text-sm">
                    Book Now
                  </button>
                <% } else { %>
                  <a href="/login" class="w-full bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white py-2 rounded-md font-semibold transition-all duration-300 hover:shadow-lg shadow-violet-500/25 text-sm block text-center">
                    Book Now
                  </a>
                <% } %>
              </div>
            </div>
            <% }) %>
          </div>
        <% } %>
      </main>
  </body>

  </html>