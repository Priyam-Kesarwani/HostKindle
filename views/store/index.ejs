<%- include('../partials/head') %>
  <!-- Latest Font Awesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  </head>

  <body class=" text-white bg-gradient-to-r from-[#2b84ea]  via-[#0d1b58] to-[#02042a] min-h-screen">
    <%- include('../partials/nav') %>

      <main class="container mx-auto px-4 py-10 max-w-6xl">

        <h2
          class="text-4xl sm:text-5xl lg:text-6xl text-center mt-1 mb-8 tracking-wide font-bold bg-gradient-to-r from-[#2b84ea] via-blue-400 to-cyan-300 text-transparent bg-clip-text">
          Welcome to
          <span class="bg-gradient-to-r from-orange-500 to-orange-800 text-transparent bg-clip-text">HostKindle</span>
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <% registeredHomes.forEach(home=> { %>
            <div
              class="border border-white bg-gray-800 backdrop-blur-md rounded-2xl shadow-2xl overflow-hidden cursor-pointer hover:shadow-orange-500/80 hover:-translate-y-2 transition-transform duration-300">

              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">

              <div class="p-4 space-y-3">
                <h3 class="text-2xl font-bold text-orange-500 p-1">
                  <%= home.houseName %>
                </h3>

                <span
                  class="inline-flex items-center bg-gradient-to-r from-cyan-400 to-blue-500 text-white text-sm font-semibold rounded-full px-3 py-1 shadow-md hover:shadow-lg transition duration-300">
                  <i class="fa-solid fa-location-dot mr-2 text-white"></i>
                  <%= home.location %>
                </span>
                <p class="text-white/80">
                  A perfect place for your stay with family and friends.
                </p>

                <div class="flex justify-between items-center">
                  <span class="text-xl font-bold text-purple-500">Rs <%= home.price %> / night</span>

                  <div class="flex items-center text-yellow-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-1" fill="currentColor"
                      viewBox="0 0 24 24">
                      <path fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd" />
                    </svg>
                    <span>
                      <%= home.rating %>
                    </span>
                  </div>
                </div>

                <button
                  class="w-full mt-3 bg-green-500 hover:bg-green-600 text-white py-2 rounded-lg font-semibold transition duration-300 shadow hover:shadow-lg">
                  Book Now
                </button>
              </div>
            </div>
            <% }) %>
        </div>
      </main>
  </body>

  </html>