<%- include('../partials/head') %>
<!-- Latest Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="text-white bg-[#1A1A2E] min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-10 max-w-6xl">
    <h2 class="text-3xl md:text-4xl lg:text-5xl text-center mt-1 mb-8 tracking-wide font-bold text-white">
      Hey Host! here are your Homes
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl hover:-translate-y-2 transition-all duration-300 cursor-pointer max-w-sm">

          <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-40 object-cover">

          <div class="p-3 space-y-2">
            <h3 class="text-lg font-bold text-white">
              <%= home.houseName %>
            </h3>

            <div class="flex items-center text-gray-300">
              <i class="fas fa-map-marker-alt mr-2 text-xs"></i>
              <span class="text-xs"><%= home.location %></span>
            </div>

            <p class="text-gray-400 text-xs line-clamp-2"><%= home.description %></p>

            <div class="flex justify-between items-center">
              <span class="text-base font-bold text-violet-400">Rs <%= home.price %> / night</span>

              <div class="flex items-center text-yellow-500">
                <i class="fas fa-star mr-1 text-xs"></i>
                <span class="text-xs font-medium"><%= home.rating %></span>
              </div>
            </div>

            <div class="flex gap-2">
              <a href="/host/edit-home/<%= home._id %>?editing=true" class="flex-1 bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white py-2 rounded-md text-center font-semibold transition-all duration-300 shadow-violet-500/25 text-sm">
                Edit
              </a>

              <form action="/host/delete-home/<%= home._id %>" method="POST" class="flex-1">
                <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-md font-semibold transition-all duration-300 text-sm">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
