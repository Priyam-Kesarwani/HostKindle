<%- include('../partials/head') %>
  </head>

  <body class="bg-base-100 text-base-content min-h-screen flex flex-col font-sans selection:bg-primary selection:text-white">
    <%- include('../partials/nav') %>

      <div class="relative flex-grow flex items-center justify-center p-4 overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
          <div
            class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-primary/10 blur-[100px] animate-pulse-slow">
          </div>
          <div
            class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] rounded-full bg-secondary/10 blur-[100px] animate-pulse-slow"
            style="animation-delay: 2s;"></div>
        </div>

        <main class="w-full max-w-md relative z-10 animate-fade-in">
          <div class="bg-neutral-900/50 backdrop-blur-xl border border-white/5 rounded-3xl p-8 shadow-2xl">
            <div class="text-center mb-8">
              <h1 class="text-3xl font-display font-bold text-white mb-2">Welcome Back</h1>
              <p class="text-gray-400">Sign in to continue your journey</p>
            </div>

            <form action="/login" method="POST" class="space-y-6">
              <%- include('../partials/errors') %>

                <div class="space-y-2">
                  <label for="email" class="block text-sm font-medium text-gray-300">Email Address</label>
                  <div class="relative">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500"><i
                        class="fas fa-envelope"></i></span>
                    <input type="email" id="email" name="email" placeholder="your.email@example.com"
                      value="<%= oldInput && oldInput.email ? oldInput.email : '' %>"
                      class="w-full pl-11 pr-4 py-3 bg-neutral border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all"
                      required />
                  </div>
                </div>

                <div class="space-y-2">
                  <div class="flex justify-between">
                    <label for="password" class="block text-sm font-medium text-gray-300">Password</label>
                    <!-- Add Forgot Password link if exists, else omit -->
                  </div>
                  <div class="relative">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500"><i
                        class="fas fa-lock"></i></span>
                    <input type="password" id="password" name="password" placeholder="Enter your password"
                      class="w-full pl-11 pr-4 py-3 bg-neutral border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all"
                      required />
                  </div>
                </div>

                <button type="submit"
                  class="w-full bg-gradient-to-r from-primary to-secondary hover:from-primary/90 hover:to-secondary/90 text-white py-3 rounded-xl font-bold shadow-lg shadow-primary/25 transition-all hover:scale-[1.02] active:scale-[0.98] flex items-center justify-center gap-2 group">
                  <span>Sign In</span>
                  <i class="fas fa-arrow-right transform group-hover:translate-x-1 transition-transform"></i>
                </button>

                <p class="text-center text-gray-400 text-sm">
                  Don't have an account? <a href="/signup"
                    class="text-primary hover:text-white font-semibold transition-colors">Sign up</a>
                </p>
            </form>
          </div>
        </main>
      </div>
  </body>

  </html>