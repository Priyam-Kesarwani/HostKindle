<%- include('../partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="text-white bg-[#1A1A2E] min-h-screen">
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-8 p-8 bg-gray-800 rounded-lg shadow-lg max-w-2xl">
        <h1 class="text-3xl font-bold mb-6 text-center text-white border-b border-gray-600 pb-4">Welcome Back</h1>

        <form action="/login" method="POST" class="max-w-md mx-auto">
          <%- include('../partials/errors') %>

            <!-- Email field -->
            <div class="mb-5">
              <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email Address</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                  <i class="fas fa-envelope"></i>
                </span>
                <input type="email" id="email" name="email" placeholder="your.email@example.com"
                  value="<%= oldInput.email ? oldInput.email : '' %>"
                  class="w-full pl-10 px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition"
                  required />
              </div>
            </div>

            <!-- Password field -->
            <div class="mb-6">
              <div class="flex items-center justify-between mb-1">
                <label for="password" class="block text-sm font-medium text-gray-300">Password</label>
              </div>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" id="password" name="password" placeholder="Enter Your Password"
                  class="w-full pl-10 px-4 py-3 bg-gray-700 border border-gray-600 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition"
                  required />
              </div>
            </div>

            <!-- Submit button with animation -->
            <button type="submit"
              class="w-full bg-gradient-to-r from-violet-500 to-purple-600 hover:from-violet-600 hover:to-purple-700 text-white py-3 rounded-md focus:ring-4 focus:ring-violet-500/50 font-medium transition-all duration-300 flex items-center justify-center shadow-violet-500/25">
              <span>Sign In</span>
              <i class="fas fa-sign-in-alt ml-2"></i>
            </button>

            <!-- Sign up link -->
            <p class="text-center mt-6 text-gray-300">
              Don't have an account yet? <a href="/signup" class="text-violet-400 hover:underline">Sign up</a>
            </p>
        </form>
      </main>
  </body>

  </html>